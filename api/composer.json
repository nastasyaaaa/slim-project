{
    "name": "nana/slim-demo",
    "authors": [
        {
            "name": "nana",
            "email": "nastyaa1212@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    },
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "doctrine/migrations": "^3.0",
        "doctrine/orm": "^2.7",
        "laminas/laminas-config-aggregator": "^1.3",
        "monolog/monolog": "^2.1",
        "php-di/php-di": "^6.1",
        "ramsey/uuid": "^4.0",
        "slim/psr7": "^1.1",
        "slim/slim": "^4.5",
        "swiftmailer/swiftmailer": "^6.2",
        "symfony/console": "^5.1",
        "webmozart/assert": "^1.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "roave/security-advisories": "dev-master",
        "doctrine/data-fixtures": "^1.4"},
    "autoload": {
        "psr-4": {
            "App\\" : "src/"
        },
        "files": [
            "helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\" : "tests/"
        }
    },
    "scripts": {
        "console" : "php bin/app.php --ansi",
        "test" : "php vendor/bin/phpunit --colors=always"
    }
}
